@page "{id:int?}"
@model CreateModel
@{
    ViewData["Title"] = "Novo Produto";
}

<h4>Cadastrar Produto</h4>
<hr />
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-3">
            <div class="form-group col-6">
                <label asp-for="Produtos.ImagemProdutoDto" class="control-label fw-bolder"></label>
                <input asp-for="Produtos.ImagemProdutoDto" class="form-control" type="file" accept="image/*" onchange="defineMiniaturaImagem(this);"/>
                <span asp-validation-for="Produtos.ImagemProdutoDto" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <div class="text-center">
                    <img id="ImgCadProduto" class="border border-1" src="/Imagens/sem-foto.jpg" alt="">
                </div>
            </div>
            <div class="form-group col-12">
                <label asp-for="Produtos.NomeProdutoDto" class="control-label fw-bolder"></label>
                <input asp-for="Produtos.NomeProdutoDto" class="form-control" />
                <span asp-validation-for="Produtos.NomeProdutoDto" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Produtos.VolumeProdutoDto" class="control-label fw-bolder"></label>
                <input asp-for="Produtos.VolumeProdutoDto" class="form-control" />
                <span asp-validation-for="Produtos.VolumeProdutoDto" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Produtos.MarcaProdutoDto" class="control-label fw-bolder"></label>
                <input asp-for="Produtos.MarcaProdutoDto" class="form-control" />
                <span asp-validation-for="Produtos.MarcaProdutoDto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produtos.DescricaoProdutoDto" class="control-label fw-bolder"></label>
                <textarea asp-for="Produtos.DescricaoProdutoDto" class="form-control" ></textarea>
                <span asp-validation-for="Produtos.DescricaoProdutoDto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar" />
                <a asp-page="Index" class="btn btn-secondary ">Cancelar</a>
            </div>
        </div>
</form>

@section Scripts {
    <style>
        span {
            font-weight: bolder;
        }
    </style>
}
