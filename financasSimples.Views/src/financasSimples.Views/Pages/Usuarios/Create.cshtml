@page
@model CreateModel
@{
    ViewData["Title"] = "Registro de usuário";
}

<h4>Cadastro de Usuário</h4>
<br />

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-3">
            <div class="form-group col-12">
                <label asp-for="_Request.Nome" class="control-label fw-bolder"></label>
                <input asp-for="_Request.Nome" class="form-control"/>
                <span asp-validation-for="_Request.Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="_Request.Email" class="control-label fw-bolder"></label>
                <input asp-for="_Request.Email" class="form-control" />
                <span asp-validation-for="_Request.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="_Request.Senha" class="control-label fw-bolder"></label>
                <input asp-for="_Request.Senha" class="form-control" />
                <span asp-validation-for="_Request.Senha" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="_Request.ConfirmaSenha" class="control-label fw-bolder"></label>
                <input asp-for="_Request.ConfirmaSenha" class="form-control" />
                <span asp-validation-for="_Request.ConfirmaSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Salvar" />
                <a asp-page="/Index" class="btn btn-secondary ">Cancelar</a>
            </div>
        </div>
</form>

